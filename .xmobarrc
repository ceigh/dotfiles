Config {
  -- appearance
  font = "xft:monospace:size=11",
  bgColor = "#000",
  fgColor = "#d6d6d6",

  commands = [
    -- xmonad info
    Run StdinReader,

    -- cpu activity
    Run Cpu [
      "--template", "<total>",
      "--suffix", "true",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 10,
    -- ram monitor
    Run Memory [
      "--template", "<usedratio>",
      "--suffix", "true",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 20,
    -- swap monitor
    -- Run Swap [
    --   "--template", "<usedratio>",
    --   "--suffix", "true",
    --   "--Low", "25",
    --   "--High", "50",
    --   "--low", "#b4c973",
    --   "--normal", "#e5b567",
    --   "--high", "#ac4142"
    -- ] 50,

    -- network
    -- Run DynNetwork [
    --   "--template", "<rx>KB/<tx>KB",
    --   "--",
    --   "--devices", "enp2s0,wlp0s26f7u4"
    -- ] 20,

    -- keyboard layout
    Run Kbd [
      ("us", "US"),
      ("ru", "RU")
    ],

    -- date
    Run Date "%^a %d/%m" "date" 10,
    Run Date "%H:%M" "date:time" 10,

    -- uptime
    Run Uptime [
      "--template", "<hours>H"
    ] 36000,

    -- weather
    Run Weather "USSS" [
      "--template", "<tempC>Â°C <windMs>M/S"
    ] 36000,

    -- volume
    Run Alsa "default" "Master" [
      "--template", "<volume>% <status>",
      "--",
      "--on", "ON",
      "--off", "OFF",
      "--onc", "#b4c973",
      "--offc", "#ac4142"
    ]
  ],

  template = " %StdinReader%}{%kbd% | <action=`st -e htop`>%cpu% %memory%</action> | %uptime% | %USSS% | <action=`st -e sh -c 'cal; read'`>%date% <fc=#e5b567>%date:time%</fc></action> | %alsa:default:Master% "
}
