Config
  { font     = "xft:monospace:size=10"
  , bgColor  = "#000000"
  , fgColor  = "#c5c8c6"

  , commands =
    [ Run StdinReader

    -- usage
    , Run MultiCpu
      [ "--template", "<total>%"
      , "--low",      "#b5bd68"
      , "--normal",   "#f0c674"
      , "--high",     "#cc6666"
      ] 10
    , Run Memory
      [ "--template", "<usedratio>%"
      , "--low",      "#b5bd68"
      , "--normal",   "#f0c674"
      , "--high",     "#cc6666"
      ] 20
    , Run DynNetwork
      [ "--template", "<rx>KB/<tx>KB"
      , "--"
      , "--devices",  "enp2s0"
      ] 20

    -- temperature
    , Run MultiCoreTemp
      [ "--template", "<avg>°C"
      , "--Low",      "50"
      , "--High",     "75"
      , "--low",      "#b5bd68"
      , "--normal",   "#f0c674"
      , "--high",     "#cc6666"
      ] 50

    -- battery
    , Run Battery
      [ "--template", " <acstatus> <left>% (<timeleft>)"
      , "--Low",      "15"
      , "--High",     "75"
      , "--low",      "#cc6666"
      , "--normal",   "#f0c674"
      , "--high",     "#b5bd68"
      , "--"
      , "-O", "<fc=#b5bd68>ON</fc>"
      , "-i", "<fc=#f0c674>ON~</fc>"
      , "-o", "<fc=#cc6666>OFF</fc>"
      , "-a", "notify-send 'Low battery' 'Connect charger'"
      , "-A", "15"
      ] 100

    -- crypto rate
    -- , Run Com "rate" [] "rate" 3000

    -- current kbd layout
    , Run Kbd [("us", "US"), ("ru", "RU")]
    -- total session vim keypresses
    , Run Com "vim-keypress-total" [] "vim-keypress-total" 10

    -- date and time
    , Run Date "%^a %d/%m/%y" "date"      10
    , Run Date "%H:%M"        "date:time" 10

    , Run Uptime
      [ "--template", "<days>D <hours>H"
      , "--Low",      "0"
      , "--High",     "1"
      , "--low",      "#b5bd68"
      , "--normal",   "#f0c674"
      , "--high",     "#cc6666"
      ] 600

    , Run WeatherX "USSS"
      [ ("fair",                    "F")
      , ("clear",                   "F")
      , ("mostly clear",            "MF")
      , ("sunny",                   "S")
      , ("mostly sunny",            "MS")
      , ("partly sunny",            "PS")
      , ("cloudy",                  "C")
      , ("mostly cloudy",           "MC")
      , ("partly cloudy",           "PC")
      , ("considerable cloudiness", "CC")
      , ("overcast",                "O")
      ]
      [ "--template", "<tempC>°C <windMs>M/S <skyConditionS>"] 6000

    -- sound monitor
    , Run Alsa "default" "Master"
      [ "--template", "<volume>%"
      , "--Low",      "100"
      , "--High",     "125"
      , "--low",      "#b5bd68"
      , "--normal",   "#f0c674"
      , "--high",     "#cc6666"
      ]
    ]

  , template = " %StdinReader%}{%kbd% (%vim-keypress-total%)   <action=`alacritty -e htop`>%multicpu% %memory% %dynnetwork%</action>   %multicoretemp%   %battery%   %uptime%   %USSS%   <action=`alacritty -e q`>%date% <fc=#b5bd68>%date:time%</fc></action>   %alsa:default:Master% "
  }
