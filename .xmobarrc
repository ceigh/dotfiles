Config {
  font = "xft:monospace:size=11",
  bgColor = "#000",
  fgColor = "#d6d6d6",

  commands = [
    Run StdinReader,

    -- usage
    Run MultiCpu [
      "--template", "<total>%",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 10,
    Run Memory [
      "--template", "<usedratio>% ",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 20,

    -- temperature
    Run MultiCoreTemp [
      "--template", "<avg>°C",
      "--Low", "50",
      "--High", "75",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 50,
    Run Com "gputemp" [] "gputemp" 50,

    -- network
    -- Run DynNetwork [
    --   "--template", "<rx>KB/<tx>KB",
    --   "--",
    --   "--devices", "enp2s0,wlp0s26f7u4"
    -- ] 20,

    Run Kbd [
      ("us", "US"),
      ("ru", "RU")
    ],

    Run Date "%^a %d/%m" "date" 10,
    Run Date "%H:%M" "date:time" 10,

    Run Uptime [
      "--template", "<days>D <hours>H",
      "--Low", "0",
      "--High", "1",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142"
    ] 36000,

    Run Weather "USSS" [
      "--template", "<tempC>°C <windMs>M/S"
    ] 6000,

    Run Alsa "default" "Master" [
      "--template", "<volume>% <status>",
      "--Low", "100",
      "--High", "125",
      "--low", "#b4c973",
      "--normal", "#e5b567",
      "--high", "#ac4142",
      "--",
      "--on", "ON",
      "--off", "OFF",
      "--onc", "#b4c973",
      "--offc", "#ac4142"
    ]
  ],

  template = " %StdinReader%}{%kbd% | <action=`st -e htop`>%multicpu% %memory%</action>| %multicoretemp% %gputemp%°C | %uptime% | %USSS% | <action=`st -e sh -c 'cal -3; read'`>%date% <fc=#b4c973>%date:time%</fc></action> | %alsa:default:Master% "
}
