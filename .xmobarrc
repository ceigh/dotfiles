Config {
  -- appearance
  font = "xft:Iosevka:size=12:bold:antialias=true:hinting=true",
  bgColor = "#080808",
  fgColor = "#B2B2B2",

  commands = [
    -- xmonad info
    Run StdinReader,

    -- cpu activity
    Run Cpu [
      "--template", "<total>",
      "--suffix", "true",
      "--low", "#8CC85F",
      "--normal", "#E3C78A",
      "--high", "#FF5454"
    ] 10,
    -- ram monitor
    Run Memory [
      "--template", "<usedratio>",
      "--suffix", "true",
      "--low", "#8CC85F",
      "--normal", "#E3C78A",
      "--high", "#FF5454"
    ] 20,
    -- swap monitor
    Run Swap [
      "--template", "<usedratio>",
      "--suffix", "true",
      "--Low", "25",
      "--High", "50",
      "--low", "#8CC85F",
      "--normal", "#E3C78A",
      "--high", "#FF5454"
    ] 50,

    -- keyboard layout
    Run Kbd [
      ("us", "US"),
      ("ru", "RU")
    ],

    -- date
    Run Date "%^a %d/%m" "date" 10,
    Run Date "%I:%M" "date:time" 10,

    -- uptime
    Run Uptime [
      "--template", "<hours>H"
    ] 36000,

    -- weather
    Run Weather "USSS" [
      "--template", "<tempC>Â°C <windMs>M/S"
    ] 6000,

    -- volume
    Run Alsa "default" "Master" [
      "--template", "<volume>% <status>",
      "--",
      "--on", "ON",
      "--off", "OFF",
      "--onc", "#8CC85F",
      "--offc", "#FF5454"
    ]
  ],

  template = " %StdinReader%}{%kbd% | <action=`st -e htop`>%cpu% %memory% %swap%</action> | %uptime% | %USSS% | <action=`st -e sh -c 'cal; read junk'`>%date% <fc=#E3C78A>%date:time%</fc></action> | %alsa:default:Master% "
}
