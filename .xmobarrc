Config {
  font = "xft:monospace:size=11",
  bgColor = "#000000",
  fgColor = "#c5c8c6",

  commands = [
    Run StdinReader,

    -- usage
    Run MultiCpu [
      "--template", "<total>%",
      "--low", "#b5bd68",
      "--normal", "#f0c674",
      "--high", "#cc6666"
    ] 10,
    Run Memory [
      "--template", "<usedratio>% ",
      "--low", "#b5bd68",
      "--normal", "#f0c674",
      "--high", "#cc6666"
    ] 20,

    -- temperature
    Run MultiCoreTemp [
      "--template", "<avg>°C",
      "--Low", "50",
      "--High", "75",
      "--low", "#b5bd68",
      "--normal", "#f0c674",
      "--high", "#cc6666"
    ] 50,
    Run Com "gputemp" [] "gputemp" 50,

    -- network
    -- Run DynNetwork [
    --   "--template", "<rx>KB/<tx>KB",
    --   "--",
    --   "--devices", "enp2s0,wlp0s26f7u4"
    -- ] 20,

    Run Kbd [
      ("us", "US"),
      ("ru", "RU")
    ],
    -- total session vim keypresses
    Run Com "vim-keypress-total" [] "vim-keypress-total" 10,

    Run Date "%^a %d/%m" "date" 10,
    Run Date "%H:%M" "date:time" 10,

    Run Uptime [
      "--template", "<days>D <hours>H",
      "--Low", "0",
      "--High", "1",
      "--low", "#b5bd68",
      "--normal", "#f0c674",
      "--high", "#cc6666"
    ] 600,

    Run Weather "USSS" [
      "--template", "<tempC>°C <windMs>M/S"
    ] 6000,

    Run Alsa "default" "Master" [
      "--template", "<volume>% <status>",
      "--Low", "100",
      "--High", "125",
      "--low", "#b5bd68",
      "--normal", "#f0c674",
      "--high", "#cc6666",
      "--",
      "--on", "ON",
      "--off", "OFF",
      "--onc", "#b5bd68",
      "--offc", "#cc6666"
    ]
  ],

  template = " %StdinReader%}{%kbd% (%vim-keypress-total%)   <action=`st -e htop`>%multicpu% %memory%</action>  %multicoretemp% %gputemp%°C   %uptime%   %USSS%   <action=`st -e sh -c 'cal -3; read'`>%date% <fc=#b5bd68>%date:time%</fc></action>   %alsa:default:Master% "
}
